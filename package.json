{
  "name": "gif-me",
  "productName": "GIFme",
  "version": "1.0.9",
  "description": "The unrelenting power of GIFs at your finger tips",
  "author": "Ashley Sanders",
  "license": "ISC",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-context-menu": "^0.11.0",
    "electron-updater": "^4.0.6",
    "menubar": "^5.2.3"
  },
  "devDependencies": {
    "electron-builder": "^20.38.5"
  },
  "build": {    
    "appId": "com.mayo.gifme",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "publisherName": "Ashley Sanders - Mayo"
    }
  },
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "publish": "build --mac --win -p always"
  }
}
